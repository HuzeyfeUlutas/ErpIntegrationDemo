{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=personnel_access;Username=postgres;Password=postgres"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "UserName": "admin",
    "Password": "admin123",
    "VirtualHost": "/",
    "ExchangeName": "pam.cap.exchange"
  },
  "Cap": {
    "DefaultGroupName": "pam.api",
    "FailedRetryCount": 3,
    "FailedRetryInterval": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "Elastic": {
    "Uris": [ "http://localhost:9200" ],
    "DataStream": {
      "Type": "logs",
      "Dataset": "pam",
      "Namespace": "api"
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "Topic": "erp.personnel.lifecycle",
    "GroupId": "personnel-access-mgmt",
    "AutoOffsetReset": "earliest",
    "EnableAutoCommit": false
  },
  "PersonnelRoles": {
    "ExitingRoleId": 352,
    "DefaultHireRoleId": 351
  },
  "AllowedHosts": "*"
}
